{
  "version": 2,
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*\\.(ico|png|jpg|jpeg|gif|svg|pdf|json|txt|xml|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/health.js": {
      "maxDuration": 30
    },
    "api/chat/message.js": {
      "maxDuration": 30
    },
    "api/chat/history/[ipAddress].js": {
      "maxDuration": 30
    }
  }
}
